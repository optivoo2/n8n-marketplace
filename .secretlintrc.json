{
  "rules": [
    {
      "id": "@secretlint/secretlint-rule-preset-recommend"
    },
    {
      "id": "@secretlint/secretlint-rule-aws",
      "rules": [
        {
          "id": "@secretlint/secretlint-rule-aws"
        }
      ]
    },
    {
      "id": "@secretlint/secretlint-rule-pattern",
      "rules": [
        {
          "patterns": [
            {
              "name": "Brazilian CPF",
              "pattern": "/\\b\\d{3}\\.\\d{3}\\.\\d{3}-\\d{2}\\b/g",
              "message": "Found CPF number - should not be committed"
            },
            {
              "name": "Brazilian CNPJ",
              "pattern": "/\\b\\d{2}\\.\\d{3}\\.\\d{3}\\/\\d{4}-\\d{2}\\b/g",
              "message": "Found CNPJ number - should not be committed"
            },
            {
              "name": "PIX Key",
              "pattern": "/\\b[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}\\b/gi",
              "message": "Found PIX key - should not be committed"
            },
            {
              "name": "Mercado Pago Token",
              "pattern": "/APP_USR-[a-zA-Z0-9-]{36}/g",
              "message": "Found Mercado Pago token"
            },
            {
              "name": "ReceitaWS Token",
              "pattern": "/Bearer\\s+[a-zA-Z0-9-_]{20,}/g",
              "message": "Found potential API token"
            }
          ]
        }
      ]
    }
  ]
}
